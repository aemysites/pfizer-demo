{
  "hero": {
    "description": "This is the Hero block description",
    "schema": {
      "classes": [
        "left-image",
        "right-image",
        "no-key-art",
        "interior",
        "inside",
        "full-width",
        "full-image",
        "bottom-container",
        "bottom-left",
        "full-width-key-art",
        "gif",
        "video",
        "locator"
      ],
      "contentAtoms": true,
      "picture": {
        "selector": ".image-before-render--image",
        "target": "innerHTML",
        "description": "Hero block picture"
      },
      "placeholderIcon": {
        "selector": ".image-before-render--placeholder_icon",
        "target": "outerHTML",
        "description": "Hero block placeholder icon"
      },
      "placeholderTitle": {
        "selector": ".image-before-render-placeholder-title",
        "target": "outerHTML",
        "description": "Hero block placeholder title"
      },
      "placeholderBody": {
        "selector": ".image-before-render-placeholder-body",
        "target": "outerHTML",
        "description": "Hero block placeholder body"
      },
      "placeholderDisclaimer": {
        "selector": ".image-before-render--placeholder_disclaimer",
        "target": "outerHTML",
        "description": "Hero block placeholder disclaimer"
      },
      "placeholderSlot": {
        "selector": ".image-before-render--placeholder_slot",
        "target": "outerHTML",
        "description": "Hero block placeholder slot content"
      },
      "locatorTitle": {
        "selector": ".image-before-render--locator_title",
        "target": "textContent",
        "description": "Locator title"
      },
      "locatorInputPlaceholder": {
        "selector": ".image-before-render--locator_input_placeholder",
        "target": "textContent",
        "description": "Locator input placeholder"
      },
      "locatorInputErrorMessage": {
        "selector": ".image-before-render--locator_input_error_message",
        "target": "textContent",
        "description": "Locator input error message"
      },
      "locatorSubmitText": {
        "selector": ".image-before-render--locator_submit_text",
        "target": "textContent",
        "description": "Locator submit text"
      },
      "locatorSubmitUrl": {
        "selector": ".image-before-render--locator_submit_url",
        "target": "textContent",
        "description": "Locator submit url"
      },
      "gif": {
        "selector": ".image-before-render--gif",
        "target": "innerHTML",
        "description": "Hero gif"
      },
      "gifStaticImage": {
        "selector": ".image-before-render--gif_static_image",
        "target": "innerHTML",
        "description": "Hero static gif image"
      },
      "localVideo": {
        "selector": ".image-before-render--local_video p",
        "target": "textContent",
        "description": "Hero local video from sharepoint"
      },
      "poster": {
        "selector": ".image-before-render--poster",
        "target": "innerHTML",
        "description": "Hero local video from sharepoint"
      },
      "videoAspectRatio": {
        "selector": ".image-before-render--video_aspect_ratio",
        "target": "textContent",
        "description": "Hero video aspect ratio"
      }
    }
  }
}
