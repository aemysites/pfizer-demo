{
  "banner": {
    "name": "Banner",
    "description": "This is a banner block.",
    "schema": {
      "classes": ["with-close-icon"],
      "body": {
        "selector": ":scope>div:first-child>div",
        "target": "textContent"
      },
      "cta": {
        "href": {
          "description": "The URL of the CTA",
          "selector": ":scope>div:nth-child(2) a",
          "target": "href"
        },
        "text": {
          "description": "The text of the CTA",
          "selector": ":scope>div:nth-child(2) a",
          "target": "textContent"
        }
      },
      "closeLabel": {
        "description": "Added as title attribute to the close button",
        "selector": ":scope>div:nth-child(3)",
        "target": "textContent"
      }
    }
  }
}
