{
  "cards": {
    "type": "Cards",
    "description": "This is a Cards block description",
    "schema": {
      "classes": ["image", "number", "eyebrow", "icon", "button-link-icon"],
      "cardCollection": {
        "type": "multiple",
        "description": "card examples",
        "subTarget": ".card-div-target",
        "items": {
          "cardIdentifier": {
            "selector": ".card-before-render--media",
            "target": "innerHTML",
            "optional": true
          },
          "ctaHref": {
            "selector": ".card-before-render--content a",
            "target": "href",
            "optional": true
          },
          "ctaLink": {
            "selector": ".card-before-render--content a",
            "target": "textContent",
            "optional": true
          },
          "heading": {
            "selector": ".card-before-render--content h2, .card-before-render--content h3, .card-before-render--content h4",
            "target": "outerHTML",
            "optional": true
          },
          "body": {
            "selector": ".card-before-render--content h2 + p, .card-before-render--content h3 + p, .card-before-render--content h4 + p",
            "target": "textContent",
            "optional": true
          }
        }
      }
    }
  }
}
